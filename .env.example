# Docker Development Configuration (for docker-compose.dev.yml)
DB_USER=devuser
DB_PASSWORD=devpass
DB_NAME=rgpd_platform

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/database_name

# Application Configuration
NODE_ENV=development
PORT=3000

# Security (DO NOT commit real values)
# Generate secrets with: openssl rand -hex 32
# SESSION_SECRET=<your_generated_secret_here>
# JWT_SECRET=<your_generated_secret_here>

# Bootstrap Configuration
# BOOTSTRAP_PLATFORM_SECRET=<your_generated_secret_here>

# Feature Flags
# ENABLE_BOOTSTRAP_MODE=false

# Observability
LOG_LEVEL=info

# AI Gateway Configuration (LOT 3.0)
# Provider: stub (default, safe fallback) | ollama (local POC)
AI_PROVIDER=stub

# Ollama Local Provider (if AI_PROVIDER=ollama)
# URL: http://localhost:11434 (local) or http://ollama:11434 (docker)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=tinyllama
OLLAMA_TIMEOUT=30000
