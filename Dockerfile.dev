FROM node:20-alpine

# Security: non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nextjs -u 1001

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY --chown=nextjs:nodejs . .

# Run as non-root
USER nextjs

EXPOSE 3000

CMD ["npm", "run", "dev"]
