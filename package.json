{
  "name": "rgpd-ia-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --webpack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "migrate": "tsx scripts/migrate.ts",
    "purge": "tsx scripts/purge.ts",
    "purge:dry-run": "tsx scripts/purge.ts dry-run",
    "purge:tenant": "tsx scripts/purge.ts tenant",
    "bootstrap:status": "tsx src/cli/bootstrap.ts status",
    "bootstrap:superadmin": "tsx src/cli/bootstrap.ts superadmin",
    "bootstrap:tenant": "tsx src/cli/bootstrap.ts tenant",
    "bootstrap:tenant-admin": "tsx src/cli/bootstrap.ts tenant-admin",
    "audit:collect": "tsx scripts/audit/collect-evidence.ts",
    "audit:secrets": "bash scripts/audit/scan-secrets.sh",
    "audit:rgpd-tests": "bash scripts/audit/run-rgpd-tests.sh",
    "audit:report": "tsx scripts/audit/generate-audit-report.ts",
    "audit:full": "pnpm audit:collect && pnpm audit:report",
    "test": "jest",
    "test:backend": "jest --projects jest.config.backend.mjs",
    "test:frontend": "jest --projects jest.config.frontend.mjs",
    "test:rgpd": "jest --projects jest.config.backend.mjs --testMatch=\"**/tests/backend/**/*rgpd*.test.ts\"",
    "test:security": "jest --projects jest.config.backend.mjs --testMatch=\"**/tests/backend/unit/security/**/*.test.ts\"",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:setup": "tsx tests/e2e/setup/seed-test-data.ts",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report"
  },
  "dependencies": {
